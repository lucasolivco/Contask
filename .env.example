# .env.example - TEMPLATE SEGURO PARA VERSIONAMENTO

# AMBIENTE
NODE_ENV=production
DEBUG=false

COMPOSE_PROJECT_NAME=contask

# NETWORK & PORTS  
BACKEND_PORT=3001
FRONTEND_PORT=3000
DB_PORT=5432
REDIS_PORT=6379

# DOM√çNIO
DOMAIN=seudominio.com
FRONTEND_URL=https://seudominio.com
BACKEND_URL=https://api.seudominio.com

# DATABASE - ALTERAR SENHAS!
DB_USER=contask_user
DB_PASSWORD=ALTERAR_SENHA_FORTE_32_CARACTERES
DB_NAME=contask_production

# REDIS - ALTERAR SENHA!
REDIS_PASSWORD=ALTERAR_SENHA_FORTE_32_CARACTERES

# JWT SECRETS - GERAR CHAVES FORTES!
JWT_SECRET=GERAR_CHAVE_FORTE_64_CARACTERES
JWT_REFRESH_SECRET=GERAR_OUTRA_CHAVE_FORTE_64_CARACTERES

# ENCRYPTION
ENCRYPTION_KEY=GERAR_CHAVE_32_CARACTERES

# EMAIL - CONFIGURAR SEU SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-do-app

# RATE LIMITING
RATE_LIMIT_WINDOW=
RATE_LIMIT_MAX=
RATE_LIMIT_AUTH_MAX=

# UPLOAD
MAX_FILE_SIZE=
UPLOAD_PATH=/app/uploads

# SSL/TLS
SSL_CERT_PATH=/etc/letsencrypt/live/${DOMAIN}/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/${DOMAIN}/privkey.pem